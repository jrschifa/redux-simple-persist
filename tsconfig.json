{
    "compileOnSave": false,
    "compilerOptions": {     
        "strict": true,         
        "declaration": true,                           
        "newLine": "LF",
        "jsx": "preserve",
        "target": "es2016",
        "module": "esnext",
        "moduleResolution": "node",        
        "esModuleInterop": true,
        "rootDir": ".",                
        "baseUrl": ".",
        "outDir": "./build",      
        "sourceMap": true,
        "skipLibCheck": true,        
        "importHelpers": true,                                       
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],      
        "typeRoots": [
            "./node_modules/@types"
        ],
        "paths": {
        "@/*": ["./src/*"]
        }
    }
}