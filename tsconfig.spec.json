{
    "compileOnSave": false,
    "compilerOptions": {        
        "jsx": "react",
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "rootDir": "./src",                
        "baseUrl": "./src",
        "outDir": "./build",      
        "sourceMap": true,
        "skipLibCheck": true,        
        "importHelpers": true,                                       
        "forceConsistentCasingInFileNames": true,        
        "lib": [
            "dom",
            "es2015",
            "es2016",
            "es2017"
        ],
        "types": [
            "node"
        ],
        "paths": {
        "@/*": ["./src/*"]
        }
    }  
}